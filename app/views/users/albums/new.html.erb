<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'albums_new', media: 'all', data: { turbolinks: false } %>

</head>
<body>
    <%= render 'users/navbar'%>

    <div class="container-fluid main-content px-4">
        <div class="row">
            <%= render 'users/sidebar'%>
            <div class="col-lg-9 px-0 mb-0">
                <div class="main-workspace row row-cols-1 row-cols-md-2 row-cols-lg-2 px-0 mb-0">
                    <div class="col col-lg-12 d-flex flex-column">
                        <div class="col-lg-12 mb-4 card-header">
                            <h2 class="edit-photo-title">Edit Album</h2>
                            <%= link_to "Back", users_albums_path, class: "btn btn-dark back-button" %>
                        </div>
                        <div class="under"></div>
                            <div class="card p-4">
                            <%= form_with model: @album, url: users_albums_path, local: true, html: { multipart: true } do |form| %>
                                <div>
                                    <div class="g-4">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <div class="mb-3">
                                                    <%= form.label :title, class: "form-label" %>
                                                    <%= form.text_field :title, class: "form-control", placeholder: "..." %>
                                                </div>
                                                <div class="mb-3">
                                                    <%= form.label :mode, class: "form-label" %>
                                                    <%= form.select :mode, [
                                                        ['Public', 'public_mode'],
                                                        ['Private', 'private_mode'],
                                                        ], { selected: 'public_mode' }, { class: "form-select" } %>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <%= form.label :description, class: "form-label" %>
                                                <%= form.text_area :description, class: "form-control description", rows: 8, placeholder: "..." %>
                                            </div>
                                        </div>
                                        
                                        <%= form.label :photos, for: "album_photos" do %>
                                            <div class="photo-upload-container d-flex flex-wrap gap-4">
                                                <label for="album_photos" class="add-photo-placeholder ">
                                                    <img src="<%= asset_path('plus_icon.png') %>" alt="Add Photo">
                                                </label>
                                                <%= form.file_field :photos, multiple: true, accept: "image/*", class: "d-none", id: "album_photos", name: "album[photos][]" %>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="d-flex gap-3 submit">
                                    <%= form.submit "Save", class: "btn btn-success" %>
                                </div>
                            <% end %>
                        </div>
                    </div>                 
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    document.addEventListener("DOMContentLoaded", () => {
    const albumPhotosInput = document.getElementById("album_photos");
    const photoUploadContainer = document.querySelector(".photo-upload-container"); // Container chính
    const addPhotoPlaceholder = document.querySelector(".add-photo-placeholder"); // Dấu cộng

    albumPhotosInput.addEventListener("change", (event) => {
        const files = event.target.files;

        for (let i = 0; i < files.length; i++) {
        const file = files[i];
        if (file.type.startsWith('image/')) { // Đảm bảo là file ảnh
            const reader = new FileReader();
            reader.onload = function (e) {
            const photoPreviewItem = document.createElement("div");
            photoPreviewItem.classList.add("photo-preview-item");

            const img = document.createElement("img");
            img.src = e.target.result;

            const removeButton = document.createElement("button");
            removeButton.type = "button";
            removeButton.classList.add("btn-remove-photo"); // Sử dụng lại class này
            removeButton.innerHTML = '<i class="bi bi-x"></i>';

            removeButton.addEventListener('click', function(e) {
                e.stopPropagation();
                photoPreviewItem.remove();
            });

            photoPreviewItem.appendChild(img);
            photoPreviewItem.appendChild(removeButton);

            // Chèn ảnh mới ngay TRƯỚC addPhotoPlaceholder
            photoUploadContainer.insertBefore(photoPreviewItem, addPhotoPlaceholder);
            };
            reader.readAsDataURL(file);
        }
        }
    });

    document.querySelectorAll('.btn-remove-photo').forEach(button => {
        button.addEventListener('click', function(event) {
        // event.stopPropagation();
        const photoItem = button.closest('.photo-preview-item');
        if (photoItem) {
            photoItem.remove();
            console.log("Ảnh đã tồn tại được xóa khỏi DOM.");
        }
        });
    });

    });
</script>
</html>