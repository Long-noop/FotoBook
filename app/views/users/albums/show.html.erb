<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'albums_show', media: 'all', data: { turbolinks: false } %>

</head>
<body>
    <%= render 'users/navbar'%>

    <div class="container-fluid main-content px-4">
        <div class="row">
            <%= render 'users/sidebar'%>
            <div class="col-lg-9">
                <div class="main-workspace row row-cols-1 row-cols-md-2 row-cols-lg-2 g-4">
                    <div class="col col-lg-12">
                        <div class="d-flex mb-4 justify-content-center">
                            <div class="btn-group btn-group-tab" role="group" aria-label="Photo Album Tabs">
                                <button type="button" class="btn " id="photoTabBtn">PHOTO</button>
                                <button type="button" class="btn active" id="albumTabBtn">ALBUM</button>
                            </div>
                        </div>
                    </div>
                    <% @albums.each do |album| %>
                    <div class="col">
                        <div class="album-post">
                            <div class="album-thumbnail-stack"
                                data-bs-toggle="modal" data-bs-target="#albumImageModal">
                                <% first_photo = album.photos.last%>
                                <% if first_photo&.featured_image&.present? %>
                                    <%= image_tag first_photo.featured_image.url, class: "album-thumbnail-img album-img-front"%>
                                    <%= image_tag first_photo.featured_image.url, class: "album-thumbnail-img album-img-middle"%>
                                    <%= image_tag first_photo.featured_image.url, class: "album-thumbnail-img album-img-back"%>
                                <%# <% else %>
                                    <%# <%= image_tag ".png", class: "album-thumbnail-img album-img-front", alt: "No Image" %>
                                <% end %>
                            </div>
                           
                            <div class="album-body">
                                <div>
                                    <div class="user-info">
                                        <div class="user-profile">
                                            <div class="user-avatar">
                                                <% if album.user.avatar.present? %>
                                                    <%= image_tag album.user.avatar.url%>
                                                <% else %>
                                                    <span> <%= calbum.user.first_name.first.upcase %><%=album.user.last_name.first.upcase %></span>
                                                <% end %>
                                            </div>
                                            <h6 class="user-name mb-0"><%=album.user.first_name %><%= album.user.last_name%></h6>
                                        </div>
                                        <div class="is-following follow-btn">
                                                <p class="following-text follow-text-label">Follow</p>
                                        </div> 
                                    </div>
                                    <h6 class="album-title"><%= album.title%></h6>
                                    <p class="album-text"><%= album.description%></p>                                
                                </div>
                                <div class="post-actions">
                                    <span class="heart-button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                                        </svg>
                                        <span class="heart-count">129</span>
                                    </span>
                                    <span>4:56 am 01/04/2018</span>
                                </div>
                            </div>
                        </div>
                    </div>   
                    <%end%>
                    <div id="loadingSpinner" class="loading-spinner-container">
                        <div class="loader">
                            <span></span>
                        </div>
                    </div>              
                </div>

                <nav aria-label="Page navigation example" class="mt-4 d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="modal fade" id="albumImageModal" tabindex="-1" aria-labelledby="albumImageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl"> <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="albumImageModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <div class="d-flex justify-content-between align-items-center">
                        <button class="btn btn-outline-secondary album-nav-btn" id="prevAlbumImageBtn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                            </svg>
                        </button>
                        <img src="" class="img-fluid album-modal-image" id="albumModalImage" alt="Image">
                        <button class="btn btn-outline-secondary album-nav-btn" id="nextAlbumImageBtn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </button>
                    </div>
                    <p id="albumModalDescription" class="mt-3"></p>
                </div>    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

            </div>
        </div>
    </div>
</body>
</html>