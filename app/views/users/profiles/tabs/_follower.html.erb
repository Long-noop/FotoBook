<div class="row g4">
    <% @users_follower.each do |user|%>
    <div class="col-md-3 m-4">
        <div class="card text-center shadow-sm">
            <% if user.avatar.present? %>
                <%= image_tag user.avatar.url, class: "rounded-circle me-3", alt: "Avatar", style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% else %>
                <%= image_tag "plus_icon.png", class: "rounded-circle me-3", alt: "Avatar", style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% end %>
            <div class="card-body">
                <h6 class="mb-1"><%=user.first_name%><%=user.last_name%></h6>
                <div class="text-primary mb-2">
                    <div class="d-flex justify-content-between">
                        <div class="photo-count me-3"> 
                            <span class="fw-bold d-block count-number"><%=user.photos.count%></span> <span class="d-block count-label">PHOTOS</span>
                        </div>
                        <div class="album-count"> <span class="fw-bold d-block count-number"><%=user.albums.count%></span>
                            <span class="d-block count-label">ALBUMS</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="is-following follow-btn">
                        <p class="following-text follow-text-label">Follow</p>
                    </div> 
                </div>
            </div>
        </div>
    </div>
    <%end%>
</div>