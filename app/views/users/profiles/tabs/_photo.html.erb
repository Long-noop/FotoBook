<div class="add-button mb-4">
    <%if user == current_user%>
        <button><%= link_to 'Add Photo', new_users_photo_path %></button>
    <%end%>
</div>
<div class="row g-4 photo-list">
    <% user.photos.each do |photo|%>
        <div class="col-md-3">
            <div class="photo-card">
                <% if photo.featured_image.present? %>
                    <%= image_tag photo.featured_image.url,  class: "user-photos"%>
                    <% if photo.private_mode?%>
                        <div class="lock-icon"> <img src="<%=asset_path('lock_icon.png')%>" alt=""></i></div>
                    <%end%>
                    <%= link_to 'EDIT', edit_users_photo_path(photo), class: "edit-button" %>
                <%end%>
            </div>
            <p class="text-center"><%= photo.title%></p>
        </div>
    <%end%>
</div>