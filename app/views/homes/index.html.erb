<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fotobook - Trang chủ</title>
    <%= stylesheet_link_tag 'homes_index', media: 'all', data: { turbolinks: false } %>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold col-lg-2 me-0 px-4" href="#">Fotobook</a>
            <div class="d-flex justify-content-between w-100">
                <form class="d-flex me-3">
                    <input class="form-control me-2" type="search" placeholder="Search Photo / Album" aria-label="Search">
                </form>
                <ul class="navbar-nav mb-2 mb-lg-0 col-lg-1">
                    <li class="nav-item">
                        <%= link_to 'Login', new_user_session_path, class: "nav-link" %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid main-content px-4">
        <div class="row">
            <div class="col-lg-2 mb-4">
                <div class="sidebar"></div>
            </div>

            <div class="col-lg-9">
                <div class="main-workspace row row-cols-1 row-cols-md-2 row-cols-lg-2 g-4">
                    <div class="col col-lg-12">
                    <div class="d-flex mb-4 justify-content-center">
                        <div class="btn-group btn-group-tab" role="group" aria-label="Photo Album Tabs">
                            <button type="button" class="btn active" id="photoTabBtn">PHOTO</button>
                            <button type="button" class="btn" id="albumTabBtn">ALBUM</button>
                        </div>
                    </div>
                </div>
                <% @photos.each  do |photo|%>
                    <div class="col">
                        <div class="card-post d-flex">
                            <div class="card-img-top">
                                  <% if photo.featured_image.present? %>
                                    <img src="<%= url_for(photo.featured_image.url) %>"
                                      class="img-thumbnail-click"
                                      alt="Post Image"
                                      data-bs-toggle="modal"
                                      data-bs-target="#imageModal"
                                      data-image-src= "../assets/a5.jpeg">
                                  <%end%>
                            </div>
                            <div class="card-body">
                                <div class="user-info">
                                    <div class="user-avatar">
                                        <% if photo.user.avatar.present? %>
                                            <%= image_tag photo.user.avatar.url%>
                                        <% else %>
                                            <span> <%= photo.user.first_name.first.upcase %><%= photo.user.last_name.first.upcase %></span>
                                        <% end %>
                                    </div>
                                    <h6 class="user-name mb-0"><%= photo.user.first_name%><%= photo.user.last_name%></h6>
                                </div>
                                <h6 class="img-title"><%= photo.title%></h6>
                                <p class="card-text"><%= photo.description%></p>
                                <div class="post-actions">
                                    <span class="heart-button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                                        </svg>
                                        <span class="heart-count">129</span>
                                    </span>
                                    <span>4:56 am 01/04/2018</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <%end%>
                </div>

                <nav aria-label="Page navigation example" class="mt-4 d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Xem ảnh</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img src="" class="img-fluid" id="modalImage" alt="Image">
                    <p id="modalDescription"></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageModal = document.getElementById('imageModal');
            const modalImage = document.getElementById('modalImage');
            const modalDescription = document.getElementById('modalDescription');

            imageModal.addEventListener('show.bs.modal', function (event) {
                const triggerImage = event.relatedTarget;
                const largeImageSrc = triggerImage.getAttribute('data-image-src');

                modalImage.src = largeImageSrc;
                
                const cardPost = triggerImage.closest('.card-post');
                const cardTextElement = cardPost.querySelector('.card-text');

                modalDescription.textContent = cardTextElement.textContent;
            });
        });
    </script>

</body>
</html>