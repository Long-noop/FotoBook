  <%= form_with model: current_user, url: registration_path(current_user), method: :patch, local: true do |f| %>
  <div class="form-name mb-3">
      <h5 class="mb-3">Password</h5>
  </div>
  
  <div class="input-field mb-3">
    <%= f.label :current_password, "Current Password", class: "form-label" %>
    <%= f.password_field :current_password, class: "form-control", required: true %>
  </div>

  <div class="input-field mb-3">
    <%= f.label :password, "New Password", class: "form-label" %>
    <%= f.password_field :password, class: "form-control", required: true %>
  </div>

  <div class="input-field mb-3">
    <%= f.label :password_confirmation, "Password Confirmation", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", required: true %>
  </div>

  <div class="actions save-button">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
